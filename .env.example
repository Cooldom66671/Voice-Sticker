# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# ML Models Configuration
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
SD_DEVICE=cpu  # Options: cpu, cuda, mps (for Apple Silicon)
IMAGE_MODEL=stabilityai/stable-diffusion-2-1-base

# Development Mode
DEBUG=false
MVP_MODE=true  # Set to true to run without ML models (for testing)

# Logging
LOG_LEVEL=INFO

# Webhook Configuration (for production)
WEBHOOK_ENABLED=false
WEBHOOK_HOST=
WEBHOOK_PATH=/webhook
WEBHOOK_PORT=8443

# Admin Users (comma-separated Telegram user IDs)
ADMIN_IDS=

# Optional: Override default paths
# DATABASE_PATH=./bot_database.db
# STORAGE_DIR=./storage
# LOGS_DIR=./logs